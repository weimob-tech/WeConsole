{
    "name": "weconsole",
    "version": "1.1.2",
    "description": "功能全面、界面与体验对标 Chrome devtools 的可定制化的小程序开发调试面板",
    "main": "dist/npm/index.js",
    "types": "dist/npm/index.d.ts",
    "miniprogram": "dist/npm",
    "files": [
        "dist",
        "LICENSE"
    ],
    "scripts": {
        "lint:style": "pnpm stylelint 'src/**/*.scss'",
        "lint:es": "pnpm eslint 'src/**/*.ts' 'build/**/*.js' '*.js'",
        "fix:es": "pnpm eslint 'src/**/*.ts' 'build/**/*.js' '*.js' --fix",
        "fix:style": "pnpm stylelint 'src/**/*.scss' --fix",
        "lint": "pnpm lint:es",
        "build:npm": "rimraf ./dist/npm && pnpm tsc --outDir ./dist/npm && node ./build/npm.js",
        "build:full": "rimraf ./dist/full && pnpm tsc --outDir ./dist/full && node ./build/full.js",
        "build": "pnpm lint && pnpm build:npm && pnpm build:full",
        "dev": "pnpm tsc --outDir ./dist/full -w && node ./build/watch.js",
        "upgrade": "pnpm ncu -u"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/weimob-tech/WeConsole.git"
    },
    "keywords": [
        "weconsole",
        "console",
        "debug",
        "devtools",
        "小程序",
        "miniprogram"
    ],
    "author": {
        "name": "weimob",
        "email": "weimob-tech@weimob.com"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/weimob-tech/WeConsole/issues"
    },
    "homepage": "https://github.com/weimob-tech/WeConsole#readme",
    "devDependencies": {
        "@mpkit/mpxml-parser": "^1.1.2",
        "@typescript-eslint/eslint-plugin": "^6.4.0",
        "@typescript-eslint/parser": "^6.4.0",
        "autoprefixer": "^10.4.15",
        "cssnano": "^6.0.1",
        "eslint": "^8.47.0",
        "eslint-config-alloy": "^5.1.1",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.28.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^6.1.1",
        "fse": "^4.0.1",
        "junk": "3.1.0",
        "node-sass": "^9.0.0",
        "npm-check-updates": "^16.11.1",
        "postcss": "^8.4.27",
        "relative": "^3.0.2",
        "rimraf": "^5.0.5",
        "stylelint": "^15.10.2",
        "stylelint-config-recess-order": "^4.3.0",
        "stylelint-config-standard": "^34.0.0",
        "stylelint-order": "^6.0.3",
        "stylelint-scss": "^5.1.0",
        "terser": "^5.19.2",
        "watch": "^1.0.2"
    },
    "dependencies": {
        "@mpkit/func-helper": "^1.1.2",
        "@mpkit/types": "^1.1.2",
        "@mpkit/util": "^1.1.2",
        "typescript": "^5.1.6"
    }
}
