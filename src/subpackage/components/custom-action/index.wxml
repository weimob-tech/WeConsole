<import src="./content.wxml" />
<import src="./buttons.wxml" />
<block wx:if="{{selfHash && caseList && caseList.length}}">
    <template wx:if="{{everyNoUI}}" is="ca-buttons" data="{{caseState, buttons:noUICaseList, caseLoading, selfHash}}"></template>
    <template wx:elif="{{caseList.length===1}}" is="ca-content" data="{{caseState, caseButton:caseList[0], caseLoading, action, gridSelected, selfHash}}"></template>
    <tabs wx:else tabs="{{caseList}}" active="{{activeCaseIndex}}" bind:change="changeCaseTab" size="small" style="height:100%;display:block;">
        <block wx:for="{{caseList}}" wx:key="value">
            <view wx:if="{{index===activeCaseIndex || buttonTabState['s'+index]}}" class="ca-scroll" slot="panel-{{item.value}}">
                <template wx:if="{{item.value==='$$$NO_UI$$$'}}" is="ca-buttons" data="{{caseState, buttons:noUICaseList, caseLoading, selfHash}}"></template>
                <template wx:else is="ca-content" data="{{caseState, caseButton:item, caseLoading, action, gridSelected, selfHash}}"></template>
            </view>
        </block>
    </tabs>
</block>